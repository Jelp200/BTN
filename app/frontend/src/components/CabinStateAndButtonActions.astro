<div class="flex items-center justify-between">
    <!-- CÃ­rculo de estado con texto -->
    <div class="flex items-center gap-2">
        <div
            id="estado-cabina"
            class="w-25 h-8 rounded-xl bg-[#ff5757] text-white flex items-center justify-center text-s font-semibold shadow-inner transition-colors"
        >
            INACTIVA
        </div>
        <span class="text-black text-sm">Estado de la cabina</span>
    </div>

    <!-- Botones Enviar y Parar a la derecha -->
    <div class="flex gap-2">
        <button
            id="btn-enviar-configuracion"
            class="bg-[#00bf63] hover:bg-[#028646cd] text-white font-medium px-3 py-1 rounded-xl transition-colors"
        >
            ENVIAR
        </button>
        <button
            id="btn-parar-reset"
            class="bg-[#ff5757] hover:bg-[#fa3a3a] text-white font-medium px-3 py-1 rounded-xl transition-colors"
        >
            PARAR Y RESET
        </button>
    </div>
</div>
