---
const {
    icon,
    isActive = false,
    medicion = "N/A"
} = Astro.props;
---

<!-- Botón + display juntos -->
<div class="control-indicador flex items-center gap-2">
    <!-- Botón fijo -->
    <button
        type="button"
        class="control-btn w-[90px] h-[60px] flex items-center justify-center space-x-2 px-3 py-2 bg-[#d9d9d9] hover:bg-[#a6a6a6] text-white rounded-lg transition-colors"
    >
        <!-- Icono fijo -->
        <img
            src={`/icons/${icon}.svg`}
            class="w-9 h-9"
        />
    </button>

    <!-- Caja de texto con altura fija -->
    <div class="medicion-display w-[150px] h-[60px] flex items-center justify-center bg-white border border-gray-300 text-sm text-gray-700 rounded-lg font-semibold">
        {medicion}
    </div>
</div>