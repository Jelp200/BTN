---
//* ESTILOS
import '../styles/global.css';

//* PROPS
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="../../public/logos/favicon.svg"/>
		<meta name="generator" content={Astro.generator} />
		<title>{ title }</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		font-family: "Montserrat", sans-serif;
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
